{
	"compilerOptions": {
		"resolveJsonModule": true,
		"strict": true,
		"module": "nodenext",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"declaration": true,
		"noEmit": true,
		"outDir": "dist",
		"moduleResolution": "nodenext",
		"target": "es2022",
		"lib": [
			"es2022",
			"DOM"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}