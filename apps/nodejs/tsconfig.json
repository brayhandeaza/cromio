{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "declaration": true,
    "noEmit": true,
    "outDir": "dist",
    "lib": ["es2022", "DOM"]
  },
  "exclude": ["node_modules"]
}