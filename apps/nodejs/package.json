{
  "name": "cromio",
  "description": "Modular and middleware-capable RPC library with extension support",
  "version": "0.0.14",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "author": "Brayhan De Aza",
  "contributors": [
    "brayhandeaza"
  ],
  "keywords": [
    "json-rpc",
    "rpc",
    "server",
    "middleware",
    "plugin",
    "extensions",
    "protocol",
    "json",
    "typescript",
    "nodejs",
    "prometheus",
    "metrics",
    "observability"
  ],
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register app.ts",
    "start": "nodemon --exec ts-node -r tsconfig-paths/register index.ts",
    "pack": "rm -rf ./dist && npm version patch && tsup",
    "release": "npm publish"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.55.3",
    "@opentelemetry/core": "0.22",
    "@opentelemetry/exporter-jaeger": "^1.30.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.1",
    "@opentelemetry/instrumentation": "0.56.0",
    "@opentelemetry/instrumentation-http": "0.22",
    "@opentelemetry/sdk-node": "^0.57.1",
    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@types/express": "^5.0.2",
    "@types/node-cron": "^3.0.11",
    "@types/stream-json": "^1.7.8",
    "address": "^2.0.3",
    "buffer": "^6.0.3",
    "chalk": "^5.4.1",
    "express": "^5.1.0",
    "fastify": "^5.3.3",
    "get-port": "^7.1.0",
    "got": "^14.4.7",
    "http2-wrapper": "^2.2.1",
    "json-colorizer": "^3.0.1",
    "node-cron": "^3.0.3",
    "prom-client": "^15.1.3",
    "short-uuid": "^5.2.0",
    "stream-json": "^1.9.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@types/node": "^22.14.1"
  }
}
